<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rec"
        tools:context="ir.all.splashscreen.SplashScreen">
    <TextView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:text="شکاف"
            android:id="@+id/txtCircle"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_header_splashscreen"
            android:background="@drawable/circle"
    />
    <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/txtCircle"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/text_header_splashscreen"
                  android:gravity="center"
                  android:text="@string/text_splash_screen"
                  android:textColor="@color/white"
                  android:id="@+id/txt_splash_center"/>

    </RelativeLayout>
    <LinearLayout
            android:id="@+id/rl_spalsh"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txt_splash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نسخه فعلی برنامه 1.0.0"
                android:textSize="17sp"
                android:textColor="@color/white"
        />
        <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.MultiplePulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:SpinKit_Color="@color/white"/>
    </LinearLayout>
</RelativeLayout>
